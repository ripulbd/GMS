doctype html
html
  head
    title Glasgow Memory Server (GMS)
    //meta(name='description', content='website description')
    //meta(name='keywords', content='website keywords, website keywords')
    meta(http-equiv='content-type', content='text/html; charset=UTF-8')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    //modernizr enables HTML5 elements and feature detects 
    script(type='text/javascript', src='javascripts/modernizr-1.5.min.js')
  body
    #bg
      img(src='images/glasgow.jpg', alt='home')
    #main
      header
        #logo
          #logo_text
            //
               class="logo_colour", allows you to change the colour of the text 
            h1
              a(href='index.html') Glasgow Memory Server (GMS)
        form.form-wrapper.cf
          input(type='text', placeholder='Search here...', required='required')
          button(type='submit') Search            
        nav
          #menu_container
            ul#menu-bar
              li.active
                a(href='/') Home
              li
                a(href='/news') News
                ul
                  li
                    a(href='/bbc') BBC
                  li
                    a(href='/scotsman') The Scotsman  
                  li
                    a(href='/et') Evening Times
              li
                a(href='/blog') Blog
                ul
                  li
                    a(href='/blogger') Blogger
                  li
                    a(href='/wordpress') Wordpress
              li
                a(href='/image') Image
                ul
                  li
                    a(href='/imgur') imgur
                  li
                    a(href='/flickr') flickr
              li
                a(href='/video') Video
                ul
                  li
                    a(href='/bbcvid') BBC
                  li
                    a(href='/youtube') Youtube
              li
                a(href='/twitter') Twitter
              li
                a(href='#') Contact Us            
      #site_content
        #sidebar_container
          .sidebar
            h3 Latest News
            h4 News 1.
            h5 News 1.
            p All other latest news.
        .content
          h1
            |  Glasgow Memory Server (GMS): Home Page!
          p
            |  Full contents of the GMS are shown below:
        - var length = Object.keys(userlist).length;
        each user, i in userlist
          - var st = 'readMore' + i;
          form(name=st id=st method='post' action='/detailNews')  		        
            #content_container
              .contents
                h4#h4_content
                  strong #{user.title}
                if(user.images)
                  img#content_image(src='/images/#{user.images[0].name}', alt='#{user.images[0].caption}')
                #headline
                  | #{user.description}
                #source
                  | Date: #{user.timeStamp}
                #source
                  | Source: #{user.source} Website
                #more
                  //a(href='#{user.url}') Read More
                  //a(href='/detailNews') Read More
                  input(type='hidden', name='query', value='#{user.title}')
                  - var sbmtForm = 'document.' + st +'.submit()';
                  //a(href='#' onclick='submitform(readMore0)') Read More
                  a(href='#' onclick=sbmtForm) Read More
            if(i < length - 1)
              hr.separator                 
        script.
          function submitform(formName)
            {
              alert(formName);
              document.formName.submit();
              //document.getElementById(formName).submit();
            }        
      #scroll
        a.top(title='Scroll to the top', href='#')
          img(src='images/top.png', alt='top')
      footer
        p
          img(src='images/twitter.png', alt='twitter')
          |  
          img(src='images/facebook.png', alt='facebook')
          |  
          img(src='images/rss.png', alt='rss')
        p
          a(href='/') Home
          | |
          a(href='/news') News
          | |
          a(href='/blog') Blog
          | |
          a(href='/image') Image
          | |
          a(href='/video') Video
          | |
          a(href='/twitter') Twitter
          | |
          a(href='#') Contact Us        
    //
       javascript at the bottom for fast page loading 
    script(type='text/javascript', src='javascripts/jquery.js')
    
